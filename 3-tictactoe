#include <iostream>
using namespace std;

char ttt[3][3] = {{'1','2','3'},{'4','5','6'},{'7','8','9'}};
int turn=1, r, c;


void board() {
  cout << endl << endl;
  cout << " "<< ttt[0][0]<<" | "<< ttt[0][1]<<" | "<<ttt[0][2]<<" " << endl;
  cout << "---|---|---" << endl;
  cout << " "<< ttt[1][0]<<" | "<< ttt[1][1]<<" | "<<ttt[1][2]<<" " << endl;
  cout << "---|---|---" << endl;
  cout << " "<< ttt[2][0]<<" | "<< ttt[2][1]<<" | "<<ttt[2][2]<<" " << endl;
  cout << endl;
}



void gameplay () {
  
  char input;
 
  cout << "enter location (1-9) of move " ;
  cin >> input;

  for (r=0, c=0; r<3 && c<3; r++, c++) {
    if (input == ttt[r][c]) {
       if (turn % 2 == 1)  {
	 ttt[r][c] = 'X';}
       else {
	 ttt[r][c] = 'O'; }
      turn = turn + 1;
      break; }
    if ((r == 2) && (c == 2)) {
       cout << "input invalid. try again";
       break; }
  }
}

int main() {
  board ();
  
  while (turn < 30) {
    gameplay ();
    board ();    
  }
  
  return 0;
}







